<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/id_recyclerview_swipelayout"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <LinearLayout
            android:id="@+id/id_recyclerview_item_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_listitem_delete"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/btn_icon_delete" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_recyclerview_item_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:id="@+id/id_recyclerview_item_imageview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:background="@drawable/img_bg_thumb_s_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/id_recyclerview_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textSize="17sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:includeFontPadding="false" />

                    <TextView
                        android:id="@+id/id_recyclerview_item_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:includeFontPadding="false" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/id_recyclerview_item_newicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/img_icon_new"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/id_recyclerview_item_newtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/likelist_recommend_friend"
                    android:textSize="11sp"
                    android:textColor="#3a9661"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>

</LinearLayout>