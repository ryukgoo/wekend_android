<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/id_setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_common_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/id_switch_setting_alarm"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingLeft="30dp"
                android:paddingRight="26dp"
                android:text="@string/setting_alarm"
                android:textSize="20sp"
                android:theme="@style/CustomSwitch" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLineDraw" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/id_switch_setting_vibration"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingLeft="30dp"
                android:paddingRight="26dp"
                android:text="@string/setting_vibration"
                android:textSize="20sp"
                android:theme="@style/CustomSwitch" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLineDraw" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/toolbar_drop_shadow" />

    </FrameLayout>

</LinearLayout>