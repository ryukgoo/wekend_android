<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:background="@drawable/img_bg_popup">

    <TextView
        android:id="@+id/id_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="left|center_vertical"
        android:textSize="20sp"
        android:textColor="#474747"
        android:maxLines="1"
        android:includeFontPadding="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/id_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxHeight="320dp"
        android:padding="20dp"
        android:textSize="15sp"
        android:textColor="#9b9b9b"
        android:includeFontPadding="false"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/id_dialog_negative_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_negative_button"
            android:textSize="14sp"
            android:textColor="#474747" />

        <TextView
            android:id="@+id/id_dialog_positive_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_positive_button"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>
    
</LinearLayout>