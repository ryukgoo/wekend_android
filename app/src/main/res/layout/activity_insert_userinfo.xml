<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/id_insert_nickname_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/enter_your_nickname"
            android:textSize="@dimen/login_static_text_small"
            android:textColor="@color/colorTextLogin"
            android:maxLines="1"
            android:includeFontPadding="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="49dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/id_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:textSize="@dimen/login_input_text"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorTextLogin"
                android:hint="@string/register_activity_nickname_hint"
                android:maxLines="1"
                android:includeFontPadding="false" />

            <Button
                android:id="@+id/id_button_check_duplicate"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:enabled="false"
                android:text="@string/check_duplicate"
                android:textSize="14sp"
                android:textColor="@drawable/selector_textcolor_button_dark"
                android:background="@drawable/selector_button_white"
                android:maxLines="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/id_choose_gender_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:text="@string/select_your_gender"
            android:textSize="@dimen/login_static_text_small"
            android:textColor="@color/colorTextLogin"
            android:maxLines="1"
            android:includeFontPadding="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="49dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/id_button_choose_male"
                android:layout_width="134dp"
                android:layout_height="33dp"
                android:layout_marginRight="62dp"
                android:text="@string/btn_male"
                android:textColor="@drawable/selector_textcolor_button_dark_selected"
                android:background="@drawable/selector_button_white_selected"
                android:layout_weight="0.5"/>

            <Button
                android:id="@+id/id_button_choose_female"
                android:layout_width="134dp"
                android:layout_height="33dp"
                android:text="@string/btn_female"
                android:textColor="@drawable/selector_textcolor_button_dark_selected"
                android:background="@drawable/selector_button_white_selected"
                android:layout_weight="0.5"/>

        </LinearLayout>

        <TextView
            android:id="@+id/id_choose_year_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_your_birth_year"
            android:textSize="@dimen/login_static_text_small"
            android:textColor="@color/colorTextLogin"
            android:maxLines="1"
            android:includeFontPadding="false" />

        <com.entuition.wekend.view.util.WekendNumberPicker
            android:id="@+id/id_birth_year_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="vertical"
            android:showDividers="none"
            android:divider="@drawable/divider"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:nestedScrollingEnabled="true" />

        <Button
            android:id="@+id/id_button_insert_userinfo_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/register_activity_next_button"
            android:textSize="@dimen/button_text_big"
            android:textColor="@drawable/selector_textcolor_button_dark"
            android:background="@drawable/selector_button_white" />

    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        layout="@layout/layout_screen_progressbar" />

</FrameLayout>