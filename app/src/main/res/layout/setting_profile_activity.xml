<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="model"
            type="com.entuition.wekend.view.main.setting.viewmodel.SettingProfileViewModel" />
        <variable
            name="imageModel"
            type="com.entuition.wekend.view.join.viewmodel.SelectImageViewModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleMarginEnd="64dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax">

                    <android.support.percent.PercentFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/profile_view_pager"
                            app:layout_aspectRatio="100%"
                            app:layout_widthPercent="100%"
                            android:background="@drawable/profile_default"
                            app:profileViewPager="@{model.photos}" />

                        <Button
                            android:id="@+id/id_pager_item_button_edit"
                            android:layout_width="48dp"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom|end"
                            android:layout_marginBottom="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/btn_icon_photo_shadow"
                            android:visibility="@{model.isEditMode ? View.VISIBLE : View.GONE}"
                            android:onClick="@{imageModel::onClickSelectImage}" />

                    </android.support.percent.PercentFrameLayout>

                    <com.entuition.wekend.view.common.PagerIndicator
                        android:id="@+id/indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center_horizontal|bottom"
                        app:profilePagerIndicator="@{model.photos}" />

                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/profile_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/campaign_detail_toolbar_background"
                    app:popupTheme="@style/ToolbarTheme"
                    app:layout_collapseMode="pin" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/toolbar_drop_shadow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_height="81dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:text="@string/nickname"
                            android:textColor="@color/colorTextNormal"
                            android:textSize="16sp"
                            android:gravity="start|center_vertical" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:hint="@string/edit_nickname_hint"
                            android:inputType="numberDecimal"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextNormal"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="@android:color/transparent"
                            android:theme="@style/CustomEditTextStyle"
                            android:text="@={model.nickname}"
                            android:enabled="false"
                            android:afterTextChanged="@{(s) -> model.onChangeNickname()}" />

                        <Button
                            android:layout_width="57dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:text="@string/edit"
                            android:textColor="@drawable/selector_textcolor_button"
                            android:background="@drawable/selector_button_red"
                            android:visibility="gone" />

                    </LinearLayout>

                    <View
                        android:background="#dadada"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="81dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:text="@string/age"
                            android:textSize="16sp"
                            android:textColor="@color/colorTextNormal"
                            android:gravity="start|center_vertical" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="20sp"
                            android:textColor="@color/colorTextNormal"
                            android:layout_weight="1"
                            android:gravity="center"
                            app:profileAge="@{model.birth}" />

                    </LinearLayout>

                    <View
                        android:background="#dadada"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_height="81dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:text="@string/mobile"
                            android:textSize="16sp"
                            android:textColor="@color/colorTextNormal"
                            android:gravity="start|center_vertical" />

                        <EditText
                            android:id="@+id/edit_phone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textColor="@{model.isEditMode ? @color/colorAccent : @color/colorTextNormal}"
                            android:hint="@string/mobile_number_hint"
                            android:inputType="phone"
                            android:gravity="center"
                            android:background="@android:color/transparent"
                            android:theme="@style/CustomEditTextStyle"
                            android:text="@={model.phone}"
                            android:enabled="@{model.isEditMode}"
                            android:onFocusChange="@{(view, isFocus) -> model.onFocusPhone(isFocus)}"
                            android:afterTextChanged="@{(s) -> model.onChangePhone()}" />
                        <!--
                        <Button
                            android:id="@+id/id_setting_profile_button_edit_phonenumber"
                            android:layout_width="57dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:text="@string/button_edit"
                            android:textColor="@drawable/selector_textcolor_button"
                            android:background="@drawable/selector_button_red"
                            android:visibility="@{model.isEditMode ? View.VISIBLE : View.GONE}"
                            android:onClick="@{model::onClickEditPhone}" />
                            -->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="@{model.isEditMode ? View.VISIBLE : View.GONE}">

                        <Button
                            android:layout_width="122dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/profile_verification"
                            android:textSize="14sp"
                            android:textColor="@drawable/selector_textcolor_button"
                            android:background="@drawable/selector_button_red"
                            android:enabled="@{model.isVaildPhone}"
                            android:onClick="@{model::onClickRequestCode}"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="21dp"
                            android:gravity="center"
                            android:text="@string/profile_verification_message"
                            android:textColor="#909090"
                            android:textSize="12sp"
                            android:includeFontPadding="false" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="63dp"
                            android:layout_marginRight="63dp"
                            android:layout_marginBottom="16dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:orientation="horizontal">

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="24dp"
                                android:singleLine="true"
                                android:inputType="numberDecimal"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:theme="@style/CustomEditTextStyle"
                                android:hint="@string/verification_hint"
                                android:text="@={model.code}"
                                android:afterTextChanged="@{(s) -> model.onChangeCode()}" />

                            <Button
                                android:layout_width="57dp"
                                android:layout_height="27dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/ok"
                                android:textSize="14sp"
                                android:textColor="@drawable/selector_textcolor_button"
                                android:background="@drawable/selector_button_red"
                                android:enabled="@{model.isValidCode}"
                                android:onClick="@{model::onClickValidateCode}"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:background="#dadada"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/id_profile_pink_balloon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@{@string/formatted_point(model.point)}"
                        android:textColor="@color/colorTextNormal"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorPrimaryDark"
            android:text="@{model.isEditMode ? @string/done : @string/profile_edit}"
            android:onClick="@{model::onClickButton}" />

    </android.support.design.widget.CoordinatorLayout>

</layout>